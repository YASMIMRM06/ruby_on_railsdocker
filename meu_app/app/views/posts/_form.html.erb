<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6" role="alert">
      <h2 class="font-bold mb-2"><%= pluralize(post.errors.count, "erro") %> impediram este post de ser salvo:</h2>
      <ul class="list-disc list-inside">
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="bg-white shadow rounded-lg p-6 mb-6">
    <div class="mb-4">
      <%= form.label :title, "Título", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <div class="mb-4">
      <%= form.label :body, "Conteúdo", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_area :body, rows: 6, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <div class="mb-4">
      <label class="flex items-center">
        <%= form.check_box :published, class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
        <span class="ml-2 text-sm text-gray-700">Publicado</span>
      </label>
    </div>
  </div>

  <div class="flex space-x-4">
    <%= form.submit "Salvar Post", class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-lg transition duration-200 cursor-pointer" %>
    <%= link_to 'Cancelar', posts_path, class: 'bg-gray-500 hover:bg-gray-600 text-white font-medium py-2 px-6 rounded-lg transition duration-200' %>
  </div>
<% end %>