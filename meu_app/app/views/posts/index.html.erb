<div class="max-w-6xl mx-auto">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-800">Posts</h1>
    <%= link_to "Novo Post", new_post_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition duration-200" %>
  </div>

  <div class="bg-white shadow rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Título</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Publicado</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @posts.each do |post| %>
          <tr class="hover:bg-gray-50 transition duration-150">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900"><%= post.title %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= post.published ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                <%= post.published ? 'Sim' : 'Não' %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
              <%= link_to 'Ver', post, class: 'text-blue-600 hover:text-blue-900 transition duration-200' %>
              <%= link_to 'Editar', edit_post_path(post), class: 'text-yellow-600 hover:text-yellow-900 transition duration-200' %>
              <%= link_to 'Excluir', post, data: { turbo_method: :delete, turbo_confirm: 'Tem certeza?' }, class: 'text-red-600 hover:text-red-900 transition duration-200' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @posts.empty? %>
    <div class="bg-white shadow rounded-lg p-8 text-center mt-6">
      <p class="text-gray-500">Nenhum post encontrado.</p>
      <%= link_to "Criar primeiro post", new_post_path, class: "inline-block mt-4 bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition duration-200" %>
    </div>
  <% end %>
</div>